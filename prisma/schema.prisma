datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String @id @default(cuid())
  email       String @unique
  displayName String

  password Password?

  createdEntries LoreEntry[] @relation(name: "createdEntries")
  authorOf       LoreEntry[] @relation(name: "authorOf")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model LoreType {
  id          String      @id @default(cuid())
  title       String      @db.VarChar(40)
  description String?
  LoreEntry   LoreEntry[]
}

model LoreEntry {
  id          String   @id @default(cuid())
  title       String
  description String
  isActive    Boolean  @default(true)
  examples    String[] @default([])

  // user that added the entry
  createdBy User   @relation(name: "createdEntries", fields: [creatorId], references: [id])
  creatorId String

  // user referenced as joke author
  author   User?   @relation(name: "authorOf", fields: [authorId], references: [id])
  authorId String?

  authorDate DateTime? // date joke was inveted
  loreType   LoreType? @relation(fields: [loreTypeId], references: [id])
  loreTypeId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
